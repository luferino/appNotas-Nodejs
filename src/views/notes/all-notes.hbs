<div class="row">
    {{#each notes}}    
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between aling-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{description}}
                </p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <div class="d-grid">
                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    {{else}}
    <div class="card w-auto mx-auto">
        <div class="card-body">
            <p class="lead">There are not notes yet.</p>
            <a href="/notes/add" class="btn btn-success d-grid">Create one</a>
        </div>
    </div>
    {{/each}}
</div>